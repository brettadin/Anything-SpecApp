{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug App - Chrome (Launch Dev Server)",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}/apps/web",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${webRoot}/node_modules/*",
                "webpack:///?:*/*": "${webRoot}/*"
            },
            "preLaunchTask": "npm: dev (apps/web)",
            "postDebugTask": "terminate npm (apps/web)"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Debug App - Chrome (Attach)",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}/apps/web",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${webRoot}/node_modules/*",
                "webpack:///?:*/*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node (Backend Only)",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/apps/web/node_modules/.bin/react-router",
            "args": ["dev"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}